<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/cacodemon"
        android:layout_width="214dp"
        android:layout_height="230dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cacodemon" />

    <ImageView
        android:id="@+id/archvile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cacodemon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/archvile" />

    <ImageView
        android:id="@+id/pinky"
        android:layout_width="129dp"
        android:layout_height="186dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cacodemon"
        app:srcCompat="@drawable/pinky" />

    <ImageView
        android:id="@+id/baronofhell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toEndOf="@+id/pinky"
        app:layout_constraintTop_toBottomOf="@+id/archvile"
        app:srcCompat="@drawable/baronofhell" />

    <ImageView
        android:id="@+id/mancubus"
        android:layout_width="228dp"
        android:layout_height="230dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/revenant"
        app:layout_constraintTop_toBottomOf="@+id/baronofhell"
        app:srcCompat="@drawable/mancubus" />

    <ImageView
        android:id="@+id/revenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinky"
        app:srcCompat="@drawable/revenant" />


</androidx.constraintlayout.widget.ConstraintLayout>